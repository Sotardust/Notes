<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="FloatingView">
        <attr name="bg_paint_color" format="color" />
        <attr name="gradient_start_paint_color" format="color" />
        <attr name="gradient_end_paint_color" format="color" />
        <attr name="gray_paint_color" format="color" />
        <!--圆环宽度-->
        <attr name="ring_width" format="dimension" />
        <!--圆环最大宽度-->
        <attr name="circle_radius" format="dimension" />
        <!--动画扫描时间-->
        <attr name="duration" format="integer" />

    </declare-styleable>
    <declare-styleable name="WifiWaveView">

        <!-- 波纹颜色-->
        <attr name="wave_side_color" format="color" />

        <!-- 中心圆半径（起始扩散波纹的起始半径）-->
        <attr name="center_radius" format="dimension" />

        <!-- 扩散最大半径-->
        <attr name="max_radius" format="dimension" />

        <!-- 创建新的波纹的间隔时间(毫秒)-->
        <attr name="wave_interval_time" format="integer" />

        <!-- 一个波纹从创建到消失的持续时间(毫秒)-->
        <attr name="wave_duration" format="integer" />

        <!-- 波纹的宽度-->
        <attr name="wave_width" format="dimension" />

        <!-- 旋转扫描边宽度-->
        <attr name="rotate_side_width" format="dimension" />

        <!-- 旋转扫描边颜色-->
        <attr name="rotate_side_color" format="color" />

        <!-- 旋转扫描中心颜色-->
        <attr name="rotate_center_color" format="color" />
    </declare-styleable>
</resources>